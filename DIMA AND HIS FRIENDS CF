#include<bits/stdc++.h>
#define ll long long
#define op() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
using namespace std;
int main()
{
	op();
	int n,s=0,a=0;
	cin>>n;
	for(int i=0; i<n; i++)
	{
		int x;
		cin>>x;
		s+=x;
	}
	for(int i=1; i<=5; i++)
	{
		if((s+i)%(n+1)!=1)
		{
			a++;
		}
	}
	cout<<a<<endl;
}
